# ZYNCX Environment Configuration
# Copy this file to .env.local and fill in your values

# ============================================================================
# Solana Configuration
# ============================================================================

# Solana RPC endpoint
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com
# For mainnet: https://api.mainnet-beta.solana.com
# For localnet: http://127.0.0.1:8899

# Solana network (devnet, mainnet-beta, localnet)
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# ============================================================================
# Program IDs (Update after deployment)
# ============================================================================

# ZYNCX main program ID
NEXT_PUBLIC_PROGRAM_ID=4C1cTQ89vywkBtaPuSXu5FZCuf89eqpXPDbsGMKUhgGT

# Noir ZK verifier program ID (deploy mixer.so first)
NEXT_PUBLIC_VERIFIER_PROGRAM_ID=

# ============================================================================
# Arcium MXE Configuration
# ============================================================================

# Arcium MXE cluster public key
NEXT_PUBLIC_ARCIUM_CLUSTER=

# Arcium cluster offset (from arcium init-mxe)
NEXT_PUBLIC_ARCIUM_OFFSET=456

# ============================================================================
# Oracle Configuration
# ============================================================================

# Pyth price feed for SOL/USD
NEXT_PUBLIC_PYTH_SOL_USD=H6ARHf6YXhGYeQfUzQNGk6rDNnLBQKrenN712K4AQJEG

# Pyth price feed for USDC/USD
NEXT_PUBLIC_PYTH_USDC_USD=Gnt27xtC473ZT2Mw5u8wZ68Z3gULkSTb5DuxJy7eJotD

# ============================================================================
# Feature Flags
# ============================================================================

# Enable ZK proof verification (requires verifier deployed)
NEXT_PUBLIC_ENABLE_ZK_PROOFS=false

# Enable Arcium MPC (requires cluster configured)
NEXT_PUBLIC_ENABLE_ARCIUM=false

# Enable mock mode for demo (bypasses ZK/MPC)
NEXT_PUBLIC_MOCK_MODE=true

# ============================================================================
# UI Configuration
# ============================================================================

# Default deposit amount (in SOL)
NEXT_PUBLIC_DEFAULT_DEPOSIT_AMOUNT=0.1

# Supported tokens (comma-separated)
NEXT_PUBLIC_SUPPORTED_TOKENS=SOL,USDC

# ============================================================================
# Development
# ============================================================================

# Enable debug logging
NEXT_PUBLIC_DEBUG=true

# Show transaction explorer links
NEXT_PUBLIC_SHOW_EXPLORER=true
